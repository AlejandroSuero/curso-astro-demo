---
import HeaderButton from "./HeaderButton.astro";
import RocketIcon from "../icons/RocketIcon.astro";
import ClockIcon from "../icons/ClockIcon.astro";
import InfoIcon from "../icons/InfoIcon.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-18">
  <div class="mx-auto text-center mb-8 lg:mb-16">
    <h2
      class="mb-4 text-5xl tracking-tight font-extrabold bg-gradient-to-r from-slate-400 to-white bg-clip-text text-transparent"
    >
      {title}
    </h2>
    <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
      All the information about SpaceX Launches
    </p>
  </div>
  <nav
    class="flex flex-col items-center justify-between text-center md:flex-row w-max mx-auto"
  >
    <HeaderButton href="/">
      <RocketIcon slot="after" />
       Latest launches
    </HeaderButton>
    <HeaderButton href="/about">
      <InfoIcon slot="after" />
       About the project
    </HeaderButton>
    <HeaderButton href="/oldest">
      <ClockIcon slot="after" />
       Oldest launches
    </HeaderButton>
  </nav>
</header>
