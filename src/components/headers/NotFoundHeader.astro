---
import HeaderButton from "./HeaderButton.astro";
import HomeIcon from "./icons/HomeIcon.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-18">
  <div class="mx-auto text-center mb-8 lg:mb-16">
    <h2
      class="mb-4 text-5xl tracking-tight font-extrabold bg-gradient-to-r from-red-300 to-red-500 bg-clip-text text-transparent"
    >
      {title}
    </h2>
    <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
      Didn't found what you were looking for?
    </p>
  </div>
  <nav
    class="flex flex-col items-center justify-between text-center md:flex-row w-max mx-auto"
  >
    <HeaderButton href="/">
      <HomeIcon slot="before" />
       Go back to Home
    </HeaderButton>
  </nav>
</header>
