{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:astro/recommended",
        "standard-with-typescript"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "*.astro"
            ],
            "parser": "astro-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser",
                "extraFileExtensions": [
                    ".astro"
                ]
            },
            "rules": {}
        }
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "@typescript-eslint/triple-slash-reference": "off",
        "no-tabs": "off"
    }
}